  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "shared-lib": [
        "projects/shared-lib/src/public-api.ts"
      ],
      "auth-lib": [
        "projects/auth-lib/src/public-api.ts"
      ]
    }
  }
}